ELIMINAR_P.ASPX.CS

using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;

namespace Ex_08
{
    public partial class eliminar_p : Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {

        }

        protected void Page_Init(object sender, EventArgs e)
        {
            txt_posicao.Text = Request.QueryString["id"];

            string connectionString = "Data Source=(LocalDB)\\MSSQLLocalDB;AttachDbFilename=C:\\10792\\Ex_08\\App_Data\\t_futebol.mdf;Integrated Security=True";

            using (SqlConnection con = new SqlConnection(connectionString))
            {
                con.Open();

                SqlCommand command;
                SqlDataReader dataReader;
                String sql = "SELECT * FROM t_posicao WHERE posicao = @posicao";

                command = new SqlCommand(sql, con);
                command.Parameters.AddWithValue("@posicao", txt_posicao.Text);
                dataReader = command.ExecuteReader();

                if (dataReader.Read())
                {
                    // Se houver resultados, exibe os dados encontrados
                    txt_posicao.Text = dataReader["posicao"].ToString();
                 
                }

                dataReader.Close();
                con.Close();
            }
        }

        protected void b_eliminar_Click(object sender, EventArgs e)
        {

            string connectionString = "Data Source=(LocalDB)\\MSSQLLocalDB;AttachDbFilename=C:\\10792\\Ex_08\\App_Data\\t_futebol.mdf;Integrated Security=True";

            using (SqlConnection con = new SqlConnection(connectionString))
            {

                con.Open();

                SqlCommand command;
                SqlDataAdapter adapter = new SqlDataAdapter();
                String sql = "";

                sql = "Delete t_posicao where id='" + txt_posicao.Text + "';";

                command = new SqlCommand(sql, con);
                adapter.DeleteCommand = new SqlCommand(sql, con);
                adapter.DeleteCommand.ExecuteNonQuery();

                command.Dispose();
                con.Close();

                ScriptManager.RegisterStartupScript(this, this.GetType(), "Dados", "alert('Posição Removida com Sucesso');window.location = 'editar_p.aspx'", true);



            }

        }
    }
}

