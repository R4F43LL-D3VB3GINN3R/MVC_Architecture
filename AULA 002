EDITAR2.ASPX.CS

using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;

namespace Ex_05
{
    public partial class Editar2 : System.Web.UI.Page
    {
        protected void Page_Init(object sender, EventArgs e)
        {
            string id = Request.QueryString["id"];
            txt_id.Text = id;

            if (id != null)
            {
                string connetionString = @"Data Source = (LocalDB)\MSSQLLocalDB; AttachDbFilename = C:\Rafael\C_#\Ex_05\App_Data\Database1.mdf;Integrated Security=True";
                using (SqlConnection con = new SqlConnection(connetionString))
                {
                    con.Open();
                    string sql = "Select * from motos where id=@id";

                    using (SqlCommand command = new SqlCommand(sql, con))
                    {
                        command.Parameters.AddWithValue("@id", id);

                        using (SqlDataReader dataReader = command.ExecuteReader())
                        {
                            if (dataReader.Read())
                            {
                                // Supondo que os campos da tabela 'motos' são os mesmos usados no exemplo
                                txt_matricula.Text = dataReader["matricula"].ToString();
                                txt_proprietario.Text = dataReader["proprietario"].ToString();
                                txt_marca.Text = dataReader["marca"].ToString();
                                txt_modelo.Text = dataReader["modelo"].ToString();
                                txt_cilindrada.Text = dataReader["cilindrada"].ToString();
                                // Certifique-se de ajustar os nomes dos campos conforme a sua tabela
                            }
                        }
                    }
                }
            }

            else

            {
                // Se não houver ID, pode ser um novo registro, você pode lidar com isso conforme necessário
            }

        }

        protected void bt_alterar_Click(object sender, EventArgs e)
        {
            string connetionString = @"Data Source = (LocalDB)\MSSQLLocalDB; AttachDbFilename = C:\Rafael\C_#\Ex_05\App_Data\Database1.mdf;Integrated Security=True";
            using (SqlConnection con = new SqlConnection(connetionString))
            {
                con.Open();
                string sql = "update motos set matricula=@matricula, proprietario=@proprietario, marca=@marca, modelo=@modelo, cilindrada=@cilindrada where id=@id";
                using (SqlCommand command = new SqlCommand(sql, con))
                {
                    command.Parameters.AddWithValue("@matricula", txt_matricula.Text);
                    command.Parameters.AddWithValue("@proprietario", txt_proprietario.Text);
                    command.Parameters.AddWithValue("@marca", txt_marca.Text);
                    command.Parameters.AddWithValue("@modelo", txt_modelo.Text);
                    command.Parameters.AddWithValue("@cilindrada", txt_cilindrada.Text);
                    command.Parameters.AddWithValue("@id", txt_id.Text);
                    command.ExecuteNonQuery();
                }
            }

            ScriptManager.RegisterStartupScript(this, this.GetType(), "Dados", "alert('Dados alterados com sucesso');window.location='Listar.aspx';", true);

            }

        protected void bt_cancelar_Click(object sender, EventArgs e)
                {

            Server.Transfer("Editar.aspx");

        }

        protected void bt_carregar_foto_Click(object sender, EventArgs e)
        {

        }
    }
}

