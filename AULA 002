LISTAR.ASPX.CS

using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Security.AccessControl;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;

namespace Ex_05
{
    public partial class Listar : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {

        }

        protected void display_data()
        {
            string connection_string; // atributo de método do tipo string...
            SqlConnection conn;       // instancia de classe para criar uma conexão com a base de dados...
                                      //A classe SqlConnection faz parte do namespace System.Data.SqlClient e é usada para representar uma conexão aberta a um banco de dados SQL Server...
            connection_string = @"Data Source = (LocalDB)\MSSQLLocalDB; AttachDbFilename = C:\Rafael\C_#\Ex_05\App_Data\Database1.mdf;Integrated Security=True";
            // atributo de método recebe a string de conexão com a base de dados...
            conn = new SqlConnection(connection_string); // A nova linha de código em questão está inicializando a instância da classe SqlConnection chamada conn com a string de conexão fornecida...
            conn.Open(); // método de classe para abrir conexão com base de dados...

            SqlCommand command; // variável para representar um comando SQL...
            SqlDataReader data_reader; // variável para ler os dados em um banco de dados...

            String sql, output = "<h1>.:Listagem de Motos:.</h1>" +
              "<table border= '1'>" +
              "<tr><th>id</th><th>Matricula</th><th>Proprietario</th><th>Marca</th><th>Modelo</th><th>Cilindrada</th><th>Foto</th>" +
              "</tr>";
            sql = "Select id, matricula, proprietario, marca, modelo, cilindrada, foto from motos";

            //Este trecho de código prepara a conexão com o banco de dados, inicializa variáveis para comandos SQL e define uma consulta SQL básica. 

            command = new SqlCommand(sql, conn); //a variável inicializa uma instância de SqlCommand, associando a consulta SQL (sql) a ser executada e a conexão ao banco de dados (conn)...

            int num_rows = 0; // conta a quantidade de registros...

            data_reader = command.ExecuteReader(); // uma variável do tipo SqlDataReader que está sendo inicializada com o resultado da execução da consulta

            while (data_reader.Read()) // enquanto os dados estiverem sendo lidos...
            {
                output += "<tr><td>" + data_reader.GetValue(0) + "</td>" +
                          "<td>" + data_reader.GetValue(1) + "</td>" +
                          "<td>" + data_reader.GetValue(2) + "</td>" +
                          "<td>" + data_reader.GetValue(3) + "</td>" +
                          "<td>" + data_reader.GetValue(4) + "</td>" +
                          "<td>" + data_reader.GetValue(5) + "</td>" +
                          "<td>" + data_reader.GetValue(6) + "</td></tr>";
                num_rows++; // Este contador é incrementado a cada iteração do loop, rastreando o número total de registros (linhas) lidos...
            }

            //lê os dados do banco de dados e constroi as linhas da tabela HTML (<tr>) com as informações de cada registro...

            output = output + "</table>"; // Após o término do loop, esta linha adiciona a tag de fechamento </table> à variável output, finalizando assim a tabela HTML...

            // Fecha o leitor de dados e a conexão com o banco de dados...
            data_reader.Close();
            Response.Write(output);
            conn.Close();

        }

        protected void b_backbutton_Click(object sender, EventArgs e)
        {
            Server.Transfer("Index.aspx"); // ir para a página Index...
        }
    }
}

